@page
@model FUNewsManagementSystem.Pages.Reports.NewDetailsModel
@{
    
    ViewData["Title"] = "LecturerNewDetails";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - @Model.NewsArticle.NewsTitle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container py-5">
        <!-- Tiêu đề bài viết -->
        <article class="bg-white p-4 rounded shadow-sm">
            <header class="mb-4">
                <h1 class="fw-bold display-5">@Model.NewsArticle.NewsTitle</h1>
                <p class="lead text-muted">@Model.NewsArticle.Headline</p>
                <div class="d-flex flex-wrap justify-content-between text-muted small">
                    <div>
                        <span><strong>Created Date:</strong> @Model.NewsArticle.CreatedDate?.ToString("dd/MM/yyyy")</span> |
                        <span><strong>Update Date:</strong> @Model.NewsArticle.ModifiedDate?.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div>
                        <span><strong>Author: </strong> @Model.NewsArticle.CreatedBy.AccountName</span> |
                        <span><strong>Category:</strong> @Model.NewsArticle.Category.CategoryName</span>
                    </div>
                </div>
            </header>

            <!-- Nội dung bài viết -->
            <section class="mb-4">
                <p class="fs-5" style="text-align: justify; line-height: 1.8;">
                    @Html.Raw(Model.NewsArticle.NewsContent)
                </p>
            </section>

            <!-- Nguồn và trạng thái -->
            <footer class="border-top pt-3 mt-4">
                <p><strong>Source: </strong> <em>@Model.NewsArticle.NewsSource</em></p>
              
                <!-- Hiển thị Tags -->
                <div>
                    <strong>Tags:</strong>
                    @if (Model.NewsArticle.Tags != null && Model.NewsArticle.Tags.Any())
                    {
                        @foreach (var tag in Model.NewsArticle.Tags)
                        {
                            <span class="badge bg-info text-dark me-1">@tag.TagName</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">N/A</span>
                    }
                </div>
            </footer>

            <!-- Nút điều hướng -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-page="/Reports/Index" class="btn btn-outline-secondary">
                    ← Back
                </a>
            
            </div>
        </article>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

