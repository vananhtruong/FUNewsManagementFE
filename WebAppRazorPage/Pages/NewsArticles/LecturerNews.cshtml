@page
@{
    ViewData["Title"] = "LecturerNews";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5">FPT University News</h1>
        </div>

        <!-- Search Section -->
        <div class="row mb-4">
            <div class="col-md-8">
                <input type="text" id="searchInput" class="form-control" placeholder="Search by title or content..." />
            </div>
            <div class="col-md-4 text-end">
                <button id="searchBtn" class="btn btn-primary">Search</button>
            </div>
        </div>

        <!-- News Container -->
        <div class="row g-4" id="newsContainer"></div>

        <!-- Pagination -->
        <nav class="mt-4">
            <ul class="pagination justify-content-center" id="pagination"></ul>
        </nav>
    </div>

    <script>
        let allArticles = [];
        let pageSize = 6;
        let currentPage = 1;
        const urlParams = new URLSearchParams(window.location.search);
        const selectedCategoryId = parseInt(urlParams.get("categoryId"));
        document.addEventListener("DOMContentLoaded", async () => {
            const token = localStorage.getItem("jwtToken");
            if (!token) {
                alert("Unauthorized. Please log in.");
                window.location.href = "/SystemAccounts/Login";
                return;
            }

            await loadArticles(token);

            document.getElementById("searchBtn").addEventListener("click", () => {
                currentPage = 1;
                renderArticles();
            });

            // Optional: Add real-time search on input change
            document.getElementById("searchInput").addEventListener("input", () => {
                currentPage = 1;
                renderArticles();
            });
        });

        async function loadArticles(token) {
            try {
                const response = await fetch("https://localhost:7126/api/NewsArticle?$expand=Category&$select=NewsArticleId,NewsTitle,Headline,NewsContent,CreatedDate,ModifiedDate&$orderby=ModifiedDate desc", {
                    headers: { "Authorization": "Bearer " + token }
                });

                if (!response.ok) throw new Error(`Failed to fetch news articles: ${response.statusText}`);

                allArticles = await response.json();
                console.log("Loaded articles:", allArticles);
                if (allArticles.length > 0) {
                    console.log("First article:", allArticles[0]); // Debug first article structure
                }

                renderArticles();
            } catch (err) {
                console.error("Error loading articles:", err);
                document.getElementById("newsContainer").innerHTML =
                    `<div class="col-12"><div class="alert alert-danger text-center">❌ Failed to load articles. Please try again later.</div></div>`;
            }
        }

        function renderArticles() {
            const keyword = document.getElementById("searchInput").value.trim().toLowerCase();
            console.log("Search keyword:", keyword);
            console.log("Category of first article:", allArticles[0]?.Category);

        const filtered = allArticles.filter(a => {
            const matchKeyword = a.NewsTitle?.toLowerCase().includes(keyword) || a.NewsContent?.toLowerCase().includes(keyword);
            const matchCategory = !selectedCategoryId || a.Category?.CategoryId == selectedCategoryId;
            return matchKeyword && matchCategory;
        });

            console.log("Filtered articles:", filtered);

            const container = document.getElementById("newsContainer");
            container.innerHTML = "";

            const start = (currentPage - 1) * pageSize;
            const paginated = filtered.slice(start, start + pageSize);

            if (paginated.length === 0) {
                container.innerHTML = `<div class="col-12 text-center text-muted">🔍 No results found.</div>`;
            }

            paginated.forEach(item => {
                const preview = item.NewsContent && item.NewsContent.length > 150
                    ? item.NewsContent.substring(0, 150) + "..."
                    : item.NewsContent || "";

                const articleCard = `
                    <div class="col-md-6 col-lg-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">
                                    <a href="/NewsArticles/LecturerNewDetails?id=${item.NewsArticleId}" class="text-decoration-none text-dark">
                                        ${item.NewsTitle || "Untitled"}
                                    </a>
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted">${item.Headline || ""}</h6>
                                <p class="card-text flex-grow-1">${preview}</p>
                            </div>
                            <div class="card-footer text-muted text-end">
                                Update: ${item.ModifiedDate ? new Date(item.ModifiedDate).toLocaleDateString("en-GB") : "N/A"}
                            </div>
                        </div>
                    </div>`;
                container.insertAdjacentHTML("beforeend", articleCard);
            });

            renderPagination(filtered.length);
        }

        function renderPagination(totalItems) {
            const totalPages = Math.ceil(totalItems / pageSize);
            const pagination = document.getElementById("pagination");
            pagination.innerHTML = "";

            for (let i = 1; i <= totalPages; i++) {
                const li = document.createElement("li");
                li.className = `page-item ${i === currentPage ? 'active' : ''}`;
                li.innerHTML = `<a class="page-link" href="#">${i}</a>`;
                li.addEventListener("click", (e) => {
                    e.preventDefault();
                    currentPage = i;
                    renderArticles();
                });
                pagination.appendChild(li);
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>