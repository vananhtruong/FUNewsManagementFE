@page
@model FUNewsManagementSystem.Pages.SystemAccounts.RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 20px;">
            <h2 class="text-center mb-4">Register</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Input.AccountName" class="form-label">👤 Name</label>
                    <input asp-for="Input.AccountName" class="form-control" placeholder="Your name" required />
                    <span asp-validation-for="Input.AccountName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.AccountEmail" class="form-label">📧 Email</label>
                    <input asp-for="Input.AccountEmail" class="form-control" placeholder="Your email" required />
                    <span asp-validation-for="Input.AccountEmail" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.AccountPassword" class="form-label">🔒 Password</label>
                    <input asp-for="Input.AccountPassword" type="password" class="form-control" placeholder="Password" required />
                    <span asp-validation-for="Input.AccountPassword" class="text-danger"></span>
                </div>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
                }
                <button type="submit" class="btn btn-success w-100">Register</button>
            </form>
            <div class="text-center mt-3">
                <a asp-page="/SystemAccounts/Login" class="btn btn-link">Already have an account? Login</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
