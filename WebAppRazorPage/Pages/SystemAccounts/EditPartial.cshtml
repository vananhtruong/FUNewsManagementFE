@page
@model FUNewsManagementSystem.Pages.SystemAccounts.EditPartialModel
@{
    Layout = null;
}

<form id="editAccountForm" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SystemAccount.AccountId" />
    <input type="hidden" asp-for="SystemAccount.AccountPassword" />

    <div class="mb-3">
        <label asp-for="SystemAccount.AccountName" class="form-label">👤 Account Name</label>
        <input asp-for="SystemAccount.AccountName" class="form-control" required />
        <span asp-validation-for="SystemAccount.AccountName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SystemAccount.AccountEmail" class="form-label">📧 Email</label>
        <input asp-for="SystemAccount.AccountEmail" class="form-control" required />
        <span asp-validation-for="SystemAccount.AccountEmail" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SystemAccount.AccountRole" class="form-label">🎭 Role</label>
        <select asp-for="SystemAccount.AccountRole" class="form-control" required>
            <option value="1">Staff</option>
            <option value="2">Lecturer</option>
        </select>
        <span asp-validation-for="SystemAccount.AccountRole" class="text-danger"></span>
    </div> 
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">❌ Cancel</button>
        <button type="submit" class="btn btn-primary">💾 Save Changes</button>
    </div>
</form>



