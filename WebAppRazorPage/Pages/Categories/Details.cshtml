@page
@model FUNewsManagementSystem.Pages.Categories.DetailsModel

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">📂 Category Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th class="col-sm-4">💼 Name</th>
                        <td id="categoryName"></td>
                    </tr>
                    <tr>
                        <th>📝 Description</th>
                        <td id="categoryDescription"></td>
                    </tr>
                    <tr>
                        <th>✅ Status</th>
                        <td id="categoryStatus"></td>
                    </tr>
                    <tr>
                        <th>🔗 Parent Category</th>
                        <td id="parentCategory"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a href="/Categories/Index" class="btn btn-secondary">
            🔙 Back to List
        </a>
    </div>
</div>

<script>
    const token = localStorage.getItem("jwtToken");
    const urlParams = new URLSearchParams(window.location.search);
    const categoryId = urlParams.get("id");

    fetch(`https://localhost:7126/api/Category/${categoryId}`, {
        headers: {
            'Authorization': `Bearer ${token}`
        }
    })
    .then(res => {
        if (!res.ok) throw new Error("Category not found");
        return res.json();
    })
    .then(category => {
        document.getElementById("categoryName").textContent = category.categoryName;
        document.getElementById("categoryDescription").textContent = category.categoryDesciption;

        const status = category.isActive ?
            '<span class="badge bg-success">Active</span>' :
            '<span class="badge bg-danger">Inactive</span>';
        document.getElementById("categoryStatus").innerHTML = status;

        if (category.parentCategory && category.parentCategory.categoryName) {
            document.getElementById("parentCategory").innerHTML = `<span class="text-primary">${category.parentCategory.categoryName}</span>`;
        } else {
            document.getElementById("parentCategory").innerHTML = '<span class="text-muted fst-italic">No Parent Category</span>';
        }
    })
    .catch(err => {
        alert("❌ Failed to load category details.");
        console.error(err);
    });
</script>
