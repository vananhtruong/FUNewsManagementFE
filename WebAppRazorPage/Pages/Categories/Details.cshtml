@page
@model FUNewsManagementSystem.Pages.Categories.DetailsModel


@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">📂 Category Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th class="col-sm-4">📛 Name</th>
                        <td>@Html.DisplayFor(model => model.Category.CategoryName)</td>
                    </tr>
                    <tr>
                        <th>📝 Description</th>
                        <td>@Html.DisplayFor(model => model.Category.CategoryDesciption)</td>
                    </tr>
                    <tr>
                        <th>✅ Status</th>
                        <td>
                            @if (Model.Category.IsActive.GetValueOrDefault())
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>🔗 Parent Category</th>
                        <td>
                            @if (Model.Category.ParentCategory != null)
                            {
                                <span class="text-primary">@Model.Category.ParentCategory.CategoryName</span>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No Parent Category</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 text-center">
      
        <a asp-page="/Categories/Index" class="btn btn-secondary">
            🔙 Back to List
        </a>
    </div>
</div>
