@page
@model FUNewsManagementSystem.Pages.Tags.IndexModel

@{
    ViewData["Title"] = "Tag Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-primary">@ViewData["Title"]</h1>
        </div>

        <div class="mb-3">
            <a href="/Tags/Create" class="btn btn-success shadow-sm">➕ Create New Tag</a>
        </div>

        <div class="table-responsive shadow-sm rounded bg-white p-3">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#️⃣ No.</th>
                        <th>🏷️ Tag Name</th>
                        <th>📝 Note</th>
                        <th class="text-center">⚡ Action</th>
                    </tr>
                </thead>
                <tbody id="tagTableBody">
                    <!-- Tags will be dynamically loaded here -->
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const token = localStorage.getItem("jwtToken");
            fetch("https://localhost:7126/api/Tag", {
                headers: {
                    'Authorization': `Bearer ${token}`
                }
            })
            .then(res => res.json())
            .then(tags => {
                const tbody = document.getElementById("tagTableBody");
                tags.forEach((tag, index) => {
                    const row = document.createElement("tr");
                    row.innerHTML = `
                        <td>${index + 1}</td>
                        <td>${tag.tagName}</td>
                        <td>${tag.note ?? ''}</td>
                        <td class="text-center">
                            <a href="/Tags/Details?id=${tag.tagId}" class="btn btn-sm btn-outline-primary me-1">👁️ Details</a>
                            <a href="/Tags/Edit?id=${tag.tagId}" class="btn btn-sm btn-warning me-1">✏️ Edit</a>
                            <a href="/Tags/Delete?id=${tag.tagId}" class="btn btn-sm btn-danger">🗑️ Delete</a>
                        </td>
                    `;
                    tbody.appendChild(row);
                });
            })
            .catch(err => {
                console.error("❌ Failed to load tags:", err);
                alert("❌ Failed to load tags.");
            });
        });
    </script>
</body>
</html>
