@page
@model FUNewsManagementSystem.Pages.Tags.EditModel

@{
    ViewData["Title"] = "Edit Tag";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">✏️ Edit Tag</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                        <input type="hidden" asp-for="Tag.TagId" />

                        <div class="mb-3">
                            <label asp-for="Tag.TagName" class="form-label fw-bold">📛 Tag Name</label>
                            <input asp-for="Tag.TagName" class="form-control" placeholder="Enter tag name..." />
                            <span asp-validation-for="Tag.TagName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tag.Note" class="form-label fw-bold">📝 Note</label>
                            <input asp-for="Tag.Note" class="form-control" placeholder="Enter a note..." />
                            <span asp-validation-for="Tag.Note" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-outline-secondary">⬅️ Back to List</a>
                            <button type="submit" class="btn btn-primary">💾 Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
