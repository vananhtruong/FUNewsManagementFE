@page
@model FUNewsManagementSystem.Pages.Tags.DetailsModel

@{
    ViewData["Title"] = "Tag Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">🔖 Tag Details</h3>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th class="text-end w-25">📛 Tag Name:</th>
                                <td>@Model.Tag.TagName</td>
                            </tr>
                            <tr>
                                <th class="text-end">📝 Note:</th>
                                <td>@Model.Tag.Note</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-page="./Edit" asp-route-id="@Model.Tag.TagId" class="btn btn-warning">✏️ Edit</a>
                <a asp-page="./Index" class="btn btn-outline-secondary">⬅️ Back to List</a>
            </div>
        </div>
    </div>
</div>
