@page
@model FUNewsManagementSystem.Pages.Tags.DeleteModel

@{
    ViewData["Title"] = "Delete Tag";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">🗑️ Delete Tag</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-danger fw-bold text-center">⚠️ Are you sure you want to delete this?</h5>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">📛 Tag Name</dt>
                        <dd class="col-sm-8" id="tagName"></dd>

                        <dt class="col-sm-4 fw-bold">📝 Note</dt>
                        <dd class="col-sm-8" id="tagNote"></dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a href="/Tags/Index" class="btn btn-outline-secondary">⬅️ Back to List</a>
                        <button id="deleteBtn" class="btn btn-danger">🗑️ Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const token = localStorage.getItem("jwtToken");
        const urlParams = new URLSearchParams(window.location.search);
        const tagId = urlParams.get("id");

        fetch(`https://localhost:7126/api/Tag/${tagId}`, {
            headers: {
                'Authorization': `Bearer ${token}`
            }
        })
        .then(res => res.json())
        .then(tag => {
            document.getElementById("tagName").textContent = tag.tagName;
            document.getElementById("tagNote").textContent = tag.note;
        })
        .catch(error => {
            alert("❌ Failed to load tag.");
            console.error(error);
        });

        document.getElementById("deleteBtn").addEventListener("click", function () {
            fetch(`https://localhost:7126/api/Tag/${tagId}`, {
                method: "DELETE",
                headers: {
                    'Authorization': `Bearer ${token}`
                }
            })
            .then(response => {
                if (response.ok) {
                    window.location.href = "/Tags/Index";
                } else {
                    alert("❌ Delete failed.");
                }
            })
            .catch(error => {
                console.error("Error:", error);
            });
        });
    </script>
}
