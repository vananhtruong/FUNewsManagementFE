@page
@model FUNewsManagementSystem.Pages.Tags.DeleteModel

@{
    ViewData["Title"] = "Delete Tag";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">🗑️ Delete Tag</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-danger fw-bold text-center">⚠️ Are you sure you want to delete this?</h5>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">📛 Tag Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Tag.TagName)</dd>

                        <dt class="col-sm-4 fw-bold">📝 Note</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Tag.Note)</dd>
                    </dl>

                    <form method="post" class="mt-3">
                        <input type="hidden" asp-for="Tag.TagId" />

                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-outline-secondary">⬅️ Back to List</a>
                            <button type="submit" class="btn btn-danger">🗑️ Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
